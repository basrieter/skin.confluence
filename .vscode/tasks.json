{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "echo",
            "type": "shell",
            // Uses the TexturePacker from http://mirrors.kodi.tv/build-deps//win32/
            "command": "./TexturePacker.exe",
            "args": [
                "-output",
                "./Media/Textures.xbt",
                "-input",
                "./Media/"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}